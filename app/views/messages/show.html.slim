.wrap-column
  .column1
    .content-section-heading
      h2.content-section-title
        span Mensaje
  .cleared
    .content-column1.column-last
      .widget-entry
        .column1
          .content.content-box-content
            .contact-form#message
              .contact-name-field
                div Para
                span= @message.to.nombre_completo
              .contact-name-field
                div Asunto
                = @message.subject
              .message-body-display
                = simple_format @message.body
              / # = f.submit 'Responder', :class => 'normal-button'
              = form_for @reply do |f|
                = f.submit 'Responder', class: 'normal-button', id: 'reply'
                = f.hidden_field :to_id
                = f.hidden_field :subject
                = f.hidden_field :in_reply_to_id
                = f.hidden_field :status
                = f.text_area :body, id: 'message_body_real'
                .message-body-editor
                  h3 Tu respuesta
                  .info-box.note-box
                    .info-box-remove
                      i.fa.fa-times
                    p[style='font-size: 0.9em; margin: 0;']
                      = "Si quieres citar parte del mensaje anterior puedes copiar y pegar el pÃ¡rrafo que te interese y precederlo de "
                      span[style='font-family: Courier; background-color: #eeeeee; color: black; border: solid #888888 1px; padding: 0.25em; padding-right: 1em; margin-right: 1em;']= "> "
                      = " (incluyendo un espacio a la derecha)."

                  #message_body
                  = f.submit 'Enviar', :class => 'normal-button', id: 'send'
                  = f.submit 'Guardar Borrador', class: 'normal-button', id: 'save-draft'

    .cleared
