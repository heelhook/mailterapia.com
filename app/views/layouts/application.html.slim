    == stylesheet_link_tag "application", :media => 'all'
    == javascript_include_tag 'application'
    == csrf_meta_tags
  body.page.page-id-473.page-template-default[class="#{controller_name} #{action_name}"]
    input#stripe_key[type='hidden' value=Rails.application.secrets.stripe_key_public]
    input#email[type='hidden' value=current_user.try(:email)]
    #background style=""
      #back_top
        i.fa.fa-angle-up
      #page
        == render partial: 'layouts/navigation'
        #body
          .wrap.bottom-spacing-big
            - if flash[:notice] || flash[:alert]
              .column1
                .info-box.success-box
                  .info-box-remove
                    i.fa.fa-times
                  p
                    strong= flash[:notice]
                  p
                    strong= flash[:alert]

          == yield
        #footer
        #footer-bottom
            .wrap
              #footer-copyright
                | Copyright #{Date.today.year} - Mailterapia
                br/
                br/
              .cleared
        /! End Footer
      /! End Page
    /! End Site Background
