    meta name="description" content="#{content_for?(:description) ? yield(:description) : 'Mailterapia Com'}"
    link#wope-gfont-Raleway-css href="https://fonts.googleapis.com/css?family=Raleway%3A100%2C200%2C300%2C400%2C500%2C600%2C700%2C800%2C900&ver=4.1.1" media="all" rel="stylesheet" type="text/css" /
    link#wope-default-style-css href="https://www.mailterapia.com/wp-content/themes/prototype/style.css?ver=4.1.1" media="all" rel="stylesheet" type="text/css" /
    link#wope-responsive-css href="https://www.mailterapia.com/wp-content/themes/prototype/responsive.css?ver=4.1.1" media="all" rel="stylesheet" type="text/css" /
    link#wope-color-css href="https://www.mailterapia.com/wp-content/themes/prototype/color-scheme/color.css?ver=4.1.1" media="all" rel="stylesheet" type="text/css" /
    link#wope-font-css href="https://www.mailterapia.com/wp-content/themes/prototype/font-set/typography.css?ver=4.1.1" media="all" rel="stylesheet" type="text/css" /
